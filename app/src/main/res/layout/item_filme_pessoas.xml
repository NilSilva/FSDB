<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewItemFilmePessoas"
    android:layout_width="wrap_content"
    android:layout_height="225dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#02162B">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewItemFilmePessoas"
            android:layout_width="100dp"
            android:layout_height="148dp"
            android:src="@mipmap/ic_placeholder" />

        <TextView
            android:id="@+id/textViewItemFilmePessoasNome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tools:text="Scarlett Johansson" />

        <TextView
            android:id="@+id/textViewItemFilmePessoasPersonagem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="Black Widow" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>